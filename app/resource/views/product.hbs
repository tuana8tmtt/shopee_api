                    </div>
                    <div class="sold-detail">
                        <span class="count">{{sold}}</span>
                        <span class="sell"> đã bán</span>
                    </div>

                    <div class="panel panel-default price-panel">
                        <div class="price-detail">
                            {{#if (isDiscount this.price_before_discount)}}
                            <div class="del-detail">
                                <del>
                                    <span>₫{{format_number
                                        this.price_before_discount}}
                                    </span></del>
                            </div>
                            <div class="real-detail">
                                <span class="">₫{{format_number this.price}}</span>
                                <span class="badge discount_ticket badge-danger m-0">{{this.discount}} giảm</span>

                            </div>

                            {{else}}
                            <span style="color:red" class="">₫{{format_number this.price}}</span>

                            {{/if}}
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-sm-5">
                            <div class="row">
                                <div class="col-sm-5 ship-option">
